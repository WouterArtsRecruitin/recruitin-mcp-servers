{
  "mcpServers": {
    "wouter-skills-bundle": {
      "command": "node",
      "args": ["./wouter-skills-bundle/dist/server.js"],
      "env": {
        "ANTHROPIC_API_KEY": "your-anthropic-key"
      }
    },
    "elite-email-composer": {
      "command": "node",
      "args": ["./elite-email-composer-mcp/dist/index.js"]
    },
    "recruitment-orchestrator": {
      "command": "node",
      "args": ["./recruitment-orchestrator/dist/index.js"],
      "env": {
        "ANTHROPIC_API_KEY": "your-anthropic-key"
      }
    },
    "recruitin-sales": {
      "command": "node",
      "args": ["./recruitin-sales-mcp/index.js"],
      "env": {
        "PIPEDRIVE_API_TOKEN": "your-pipedrive-token"
      }
    },
    "pipedrive": {
      "command": "node",
      "args": ["./pipedrive/dist/index.js"],
      "env": {
        "PIPEDRIVE_API_TOKEN": "your-pipedrive-token",
        "PIPEDRIVE_COMPANY_DOMAIN": "your-company"
      }
    },
    "cv-parser": {
      "command": "python3",
      "args": ["./cv-parser/server.py"],
      "env": {
        "HF_TOKEN": "your-huggingface-token"
      }
    },
    "cv-vacancy-matcher": {
      "command": "python3",
      "args": ["./cv-vacancy-matcher/server.py"],
      "env": {
        "HF_TOKEN": "your-huggingface-token"
      }
    },
    "resend": {
      "command": "node",
      "args": ["./resend-mcp-server/index.js"],
      "env": {
        "RESEND_API_KEY": "your-resend-key"
      }
    },
    "ollama": {
      "command": "node",
      "args": ["./ollama-mcp-server/index.js"],
      "env": {
        "OLLAMA_BASE_URL": "http://localhost:11434",
        "OLLAMA_DEFAULT_MODEL": "llama3.2"
      }
    }
  }
}
